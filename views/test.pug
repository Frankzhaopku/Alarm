extends ./common.pug

block content
    div(id='main_div' class='panel panel-primary col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-6 col-lg-offset-3' style='border:2px solid black;height:800px;')
        div()
            p(id='setting_str' style='float:left;font-size:30px;') Setting
            img(id='btn_add' src='/img/add.png' style='float:right')
            img(id='btn_refresh' src='/img/refresh.png' style='float:right')
        div(class='table-responsive' style='bottom:10%;margin-top:10px;margin-left:auto;margin-right:auto;width:100%;border:solid 1px;height:85%')
            table(class='table table-bordered')
                thead()
                    tr()
                        th() Metric
                        th() Condition(eg. "val*val<20" or "val<10&&val>5")
                tbody(id='settingTable')
        div()
            button(id='btn_submit' class='btn btn-success col-xs-6 col-sm-5 col-sm-offset-1 col-md-4 col-md-offset-2 col-lg-3 col-lg-offset-3' type='button') 提交
            button(id='btn_restore' class='btn btn-danger col-xs-6 col-sm-5 col-md-4 col-lg-3' type='button') 复原